<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gunmetal"
    android:gravity="fill_horizontal"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Welcome! Could you take a quick survey before we begin?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_text"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobq"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bizimg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/businessicon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/techimg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        
             <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/otherimg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/othericon" />
        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/jobq"
        android:layout_width="wrap_content"
        android:textStyle="bold" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="5dp"
        android:text="1. Choose your job function:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_text" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_text" />

</RelativeLayout>